rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /mobileClaimRecords/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /mobileClaimRecords/{parent}/statusHistory/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/statusHistory/{document} {
      allow read: if true;
    }

  }
}
